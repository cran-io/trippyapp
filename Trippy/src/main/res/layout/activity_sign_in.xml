<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/trippyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@drawable/trippy_header" />

    <ImageView
        android:id="@+id/dataBackgroundSignIn"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_below="@id/trippyHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/background_data" />


    <EditText
        android:id="@+id/emailAddressSignIn"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:hint="Email Address"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f"
        android:inputType="textEmailAddress"
        android:layout_alignTop="@+id/dataBackgroundSignIn"
        android:layout_alignLeft="@+id/dataBackgroundSignIn"
        android:layout_alignStart="@+id/dataBackgroundSignIn"
        android:layout_alignRight="@+id/dataBackgroundSignIn"
        android:layout_alignEnd="@+id/dataBackgroundSignIn" />

    <EditText
        android:id="@+id/passwordSignIn"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:hint="Password"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/emailAddressSignIn"
        android:layout_alignLeft="@+id/dataBackgroundSignIn"
        android:layout_alignStart="@+id/dataBackgroundSignIn"
        android:layout_alignRight="@+id/dataBackgroundSignIn"
        android:layout_alignEnd="@+id/dataBackgroundSignIn" />

    <ImageView
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_in_btn"
        android:layout_below="@+id/passwordSignIn"
        android:layout_alignRight="@+id/passwordSignIn"
        android:layout_alignEnd="@+id/passwordSignIn"
        android:layout_alignLeft="@+id/passwordSignIn"
        android:layout_alignStart="@+id/passwordSignIn"
        android:layout_marginTop="10sp"/>


</RelativeLayout>
