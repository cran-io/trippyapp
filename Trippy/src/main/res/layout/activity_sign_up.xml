<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/trippyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@drawable/trippy_header" />

    <ImageView
        android:id="@+id/dataBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trippyHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/background_data" />

    <EditText
        android:layout_marginTop="15sp"
        android:id="@+id/firstNameET"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:outlineProvider="background"
        android:layout_alignEnd="@+id/signUpBtn"
        android:elegantTextHeight="false"
        android:background="#ffffff"
        android:inputType="textCapWords"
        android:hint="First Name"
        android:layout_below="@+id/trippyHeader"
        android:fontFamily="sans-serif-light"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_alignRight="@+id/signUpBtn"
        android:gravity="fill_vertical"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f" />

    <EditText
        android:id="@+id/lastNameET"
        android:layout_width="wrap_content"
        android:inputType="textCapWords"
        android:layout_height="30sp"
        android:layout_marginTop="10sp"
        android:layout_alignEnd="@+id/firstNameET"
        android:layout_alignLeft="@+id/firstNameET"
        android:layout_alignRight="@+id/firstNameET"
        android:layout_alignStart="@+id/firstNameET"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f"
        android:layout_below="@+id/firstNameET"
        android:background="#ffffff"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/emailAddressET"
        android:layout_width="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:hint="Email Address"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8sp"
        android:layout_below="@+id/lastNameET"
        android:textColor="#9f9f9f"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/lastNameET"
        android:layout_alignStart="@+id/lastNameET"
        android:layout_alignRight="@+id/lastNameET"
        android:layout_alignEnd="@+id/lastNameET" />

    <EditText
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:inputType="date"
        android:layout_alignLeft="@+id/dataBackground"
        android:background="#ffffff"
        android:layout_alignStart="@+id/dataBackground"
        android:layout_below="@+id/emailAddressET"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-light"
        android:hint="Birth Date DD/MM/YYYY"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:hint="Password"
        android:layout_alignEnd="@+id/dataBackground"
        android:layout_alignLeft="@+id/dataBackground"
        android:layout_alignRight="@+id/dataBackground"
        android:layout_alignStart="@+id/dataBackground"
        android:layout_below="@id/birthDate"
        android:layout_centerVertical="true"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:paddingLeft="8sp"
        android:textColor="#9f9f9f" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:hint="Confirm Password"
        android:layout_alignEnd="@+id/dataBackground"
        android:layout_alignLeft="@+id/dataBackground"
        android:layout_alignRight="@+id/dataBackground"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/dataBackground"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="8sp"
        android:inputType="textPassword"
        android:textColor="#9f9f9f" />

    <ImageView
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_button"
        android:layout_alignLeft="@+id/dataBackground"
        android:layout_alignStart="@+id/dataBackground"
        android:layout_below="@+id/dataBackground"
        android:layout_marginTop="20sp" />


</RelativeLayout>